apiVersion: apps/v1
kind: Deployment
metadata:
  name: prometheus
spec:
  replicas: 1
  selector:
    matchLabels:
      app: prometheus
  template:
    metadata:
      labels:
        app: prometheus
    spec:
      initContainers:
        - name: create-data-dir
          image: busybox
          command:
            - sh
            - -c
            - |
              mkdir -p /prometheus-data && chown -R 65534:65534 /prometheus-data
          volumeMounts:
            - name: storage
              mountPath: /prometheus-data
      containers:
        - name: prometheus
          image: prom/prometheus:latest
          ports:
            - containerPort: 9090
          volumeMounts:
            - name: storage
              mountPath: /var/lib/prometheus-data
      volumes:
        - name: storage
          persistentVolumeClaim:
            claimName: prometheus-pvc